{%- minify -%}
    <!DOCTYPE html>
    <html lang="en-GB">
        <head>
            <meta http-equiv="X-UA-Compatible" content="IE=edge" />
            <meta charset="utf-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <meta name="referrer" content="origin-when-cross-origin" />
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
            <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
            <link rel="stylesheet" href="{{ siteUrl('assets/css/app.css') }}" type="text/css" />
        </head>

        <body class="ltr flex flex-col justify-between bg-grey">
            {% include "includes/_navigation" %}

            <main class="flex-grow overflow-hidden">
                {% block content %}

                {% endblock %}
            </main>

            {% include "includes/_footer" %}

            <script src="{{ siteUrl('assets/js/dependencies.min.js') }}"></script>
            <script src="{{ siteUrl('assets/js/app.js') }}"></script>
            <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
        </body>
    </html>
{%- endminify -%}